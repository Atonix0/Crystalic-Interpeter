class Tokenizer
  @@code = [] of String
  @@tokens = [] of String
  def initialize(code : String) 
    @@code = code.chars;
    @@tokens = [] of String
  end

  def self.isNum(x) 
    return "0123456789".includes? x;
  end

  def self.take()
    return @@code.shift();
  end

  def self.tokenize() 
    while @@code.size > 0
      if isNum(@@code[0]) 
        res : String = "";
        while isNum(@@code[0]) 
          res += take
        end
        @@tokens.push(res);
      end
    end
    return tokens;
  end
end
